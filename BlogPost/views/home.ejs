<%- include("partials/header"); -%>
<h1>Home</h1>
<p><%=startingContent%></p>
 
<% allpost.forEach(post => { %>
    <h1><%= post.title %></h1>
    <p>
      <% if (post.content.length > 100) { %>
        <%= post.content.substring(0, 100) + ' ...' %>
        <a href="/post/<%= encodeURIComponent(post.title) %>">Read more</a>
      <% } else { %>
        <%= post.content %>
      <% } %>
    </p>
  <% }); %>
  
<form action="/" mehtod="post">
    
</form>
